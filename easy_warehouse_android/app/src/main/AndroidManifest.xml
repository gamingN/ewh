<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.veeotech.easywarehouse">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/es"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.example.veeotech.easywarehouse.old.MainActivity"
            android:screenOrientation="portrait"
            >

        </activity>

        <activity android:name="com.example.veeotech.easywarehouse.old.RuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.veeotech.easywarehouse.ChuActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.veeotech.easywarehouse.MyCaptureActivity"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme"
            android:windowSoftInputMode="stateAlwaysHidden"
            />

        <activity android:name="com.example.veeotech.easywarehouse.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>

        <activity android:name="com.example.veeotech.easywarehouse.old.ResultActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.example.veeotech.easywarehouse.AnswerActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            />

        <activity android:name="com.example.veeotech.easywarehouse.AlterOrderActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name="com.example.veeotech.easywarehouse.ui_fragment.TabMainActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name="com.example.veeotech.easywarehouse.ExitInfoAcitivity"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>